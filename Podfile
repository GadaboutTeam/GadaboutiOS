  # Persistance
  pod 'Realm', '~> 0.91.0'
  pod 'Realm+JSON', '~> 0.2'

  # Messaging UI
  pod 'Atlas'

  # Textview with a Placeholder. What a concept!
  pod 'SZTextView', '~> 1.2.1'

  # Prepermissions for Location, Notifications, etc.
  pod 'ClusterPrePermissions', '~> 0.1'

  # Input Field
  pod 'VENTokenField'
end

