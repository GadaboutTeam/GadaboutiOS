target 'GadaboutiOS' do
  # Facebook SDK
  pod 'Facebook-iOS-SDK', '~> 4.0'

  # Networking
  pod 'AFNetworking', '~> 2.5.2'

  # Animation
  pod 'pop', '~> 1.0.7'
