platform :ios, '8.0'

target 'GadaboutiOS' do
  # Facebook SDK
  pod 'Facebook-iOS-SDK', '~> 4.0'
  pod 'Parse', '~> 1.7'

  # Networking
  pod 'AFNetworking', '~> 2.5.2'

  # ReactiveCocoa
  pod 'ReactiveCocoa', '~> 2.4.7'

  # Animation
  pod 'pop', :git => 'https://github.com/facebook/pop.git'
  pod 'PulsingHalo', :git => 'https://github.com/shu223/PulsingHalo.git'

  # Persistance
  pod 'Realm', '~> 0.91.3'
  pod 'Realm+JSON', '~> 0.2'

  # Textview with a Placeholder. What a concept!
  pod 'SZTextView', '~> 1.2.1'

  # Prepermissions for Location, Notifications, etc.
  pod 'ClusterPrePermissions', '~> 0.1'

  # Input Field
  pod 'VENTokenField', '~> 2.0'
end

target 'GadaboutiOSTests' do

end
